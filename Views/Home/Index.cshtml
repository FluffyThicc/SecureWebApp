@{
    ViewData["Title"] = "Home - Ace Job Agency";
    var userInfo = ViewBag.UserInfo as dynamic;
}

@if (User.Identity?.IsAuthenticated == true && userInfo != null)
{
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
                <div class="bg-gray-900 px-6 py-4">
                    <h3 class="text-xl font-bold text-white">Your Registration Information</h3>
                </div>
                <div class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <strong class="text-gray-700 block mb-1">First Name:</strong>
                            <p class="text-gray-600">@userInfo.FirstName</p>
                        </div>
                        <div>
                            <strong class="text-gray-700 block mb-1">Last Name:</strong>
                            <p class="text-gray-600">@userInfo.LastName</p>
                        </div>
                        <div>
                            <strong class="text-gray-700 block mb-1">Email Address:</strong>
                            <p class="text-gray-600">@userInfo.Email</p>
                        </div>
                        <div>
                            <strong class="text-gray-700 block mb-1">Gender:</strong>
                            <p class="text-gray-600">@userInfo.Gender</p>
                        </div>
                        <div>
                            <strong class="text-gray-700 block mb-1">Date of Birth:</strong>
                            <p class="text-gray-600">@userInfo.DateOfBirth</p>
                        </div>
                        <div>
                            <strong class="text-gray-700 block mb-1">NRIC:</strong>
                            <p class="text-gray-600">@userInfo.NRIC</p>
                            <small class="text-blue-600">🔒 Encrypted in database</small>
                        </div>
                        @if (!string.IsNullOrEmpty(userInfo.ResumeFileName))
                        {
                            <div>
                                <strong class="text-gray-700 block mb-1">Resume:</strong>
                                <p class="text-gray-600">@userInfo.ResumeFileName</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(userInfo.WhoAmI))
                        {
                            <div class="md:col-span-2">
                                <strong class="text-gray-700 block mb-1">Who Am I:</strong>
                                <p class="text-gray-600">@userInfo.WhoAmI</p>
                            </div>
                        }
                    </div>
                    
                    <!-- Account Security Section -->
                    <div class="mt-8 pt-8 border-t border-gray-200">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4">Account Security</h4>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                <div>
                                    <strong class="text-gray-900 block mb-1">Two-Factor Authentication (2FA)</strong>
                                    <p class="text-sm text-gray-600">
                                        @if (ViewBag.IsTwoFactorEnabled == true)
                                        {
                                            <span class="text-green-600">✓ Enabled - Your account is protected with Google Authenticator</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-600">Not enabled - Add an extra layer of security to your account</span>
                                        }
                                    </p>
                                </div>
                                <div>
                                    @if (ViewBag.IsTwoFactorEnabled == true)
                                    {
                                        <form asp-controller="Account" asp-action="Disable2FA" method="post" class="inline">
                                            <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition-colors">
                                                Disable 2FA
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Enable2FA" class="px-4 py-2 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors inline-block">
                                            Enable 2FA
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                <div>
                                    <strong class="text-gray-900 block mb-1">Change Password</strong>
                                    <p class="text-sm text-gray-600">Update your account password</p>
                                </div>
                                <div>
                                    <a asp-controller="Account" asp-action="ChangePassword" class="px-4 py-2 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors inline-block">
                                        Change Password
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Hero Section -->
    <section class="bg-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl mx-auto text-center">
                <!-- Badge Element -->
                <div class="mb-8 inline-flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-full">
                    <div class="flex items-center -space-x-2">
                        <div class="w-7 h-7 rounded-full bg-gradient-to-br from-purple-500 to-purple-700 border-2 border-white"></div>
                        <div class="w-7 h-7 rounded-full bg-gradient-to-br from-pink-500 to-pink-700 border-2 border-white"></div>
                    </div>
                    <span class="font-medium text-gray-700">Career-Dreams</span>
                </div>

                <!-- Main Headline -->
                <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 mb-6 leading-tight">
                    Radiant Careers,<br />Sparkling Job Opportunities Made Easy!
                </h1>

                <!-- Subtitle -->
                <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
                    Dive into the ultimate career advancement experience with Ace Job Agency! We specialize in creating vibrant career paths and connecting talent with opportunities.
                </p>

                <!-- CTA Button -->
                <div class="mb-8">
                    <a asp-controller="Account" asp-action="Register" class="inline-flex items-center gap-2 px-8 py-4 bg-gray-900 text-white font-semibold rounded-full hover:bg-gray-800 transition-all shadow-lg hover:shadow-xl">
                        Get Started
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Partner/Company Logos Section -->
    <section class="bg-gray-50 py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-wrap justify-center items-center gap-8 opacity-40">
                <div class="text-xl font-semibold text-gray-600">TechCorp</div>
                <div class="text-xl font-semibold text-gray-600">GlobalInc</div>
                <div class="text-xl font-semibold text-gray-600">InnovateHub</div>
                <div class="text-xl font-semibold text-gray-600">FutureWorks</div>
                <div class="text-xl font-semibold text-gray-600">CareerBoost</div>
                <div class="text-xl font-semibold text-gray-600">TalentMatch</div>
                <div class="text-xl font-semibold text-gray-600">ProConnect</div>
                <div class="text-xl font-semibold text-gray-600">JobFlow</div>
            </div>
        </div>
    </section>

    <!-- Image Gallery Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
                <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-purple-500 to-purple-700 shadow-lg hover:scale-105 transition-transform cursor-pointer"></div>
                <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-pink-500 to-pink-600 shadow-lg hover:scale-105 transition-transform cursor-pointer"></div>
                <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-blue-400 to-cyan-400 shadow-lg hover:scale-105 transition-transform cursor-pointer"></div>
                <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-green-400 to-teal-400 shadow-lg hover:scale-105 transition-transform cursor-pointer"></div>
                <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-pink-400 to-yellow-400 shadow-lg hover:scale-105 transition-transform cursor-pointer"></div>
                <div class="aspect-[4/5] rounded-2xl bg-gradient-to-br from-cyan-400 to-purple-800 shadow-lg hover:scale-105 transition-transform cursor-pointer"></div>
            </div>
        </div>
    </section>
}
