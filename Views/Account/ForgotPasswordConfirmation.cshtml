@{
    ViewData["Title"] = "Password Reset Email Sent - Ace Job Agency";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Check your email</h2>
            <p class="text-gray-600 mb-4">
                If an account exists with the email you entered, we have sent a secure link to reset your password.
            </p>
            <p class="text-gray-500 text-sm mb-6">
                For security reasons, we do not indicate whether an email address is registered.
            </p>
            <a asp-action="Login" class="inline-block px-6 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors">
                Return to Login
            </a>
        </div>
    </div>
</div>


