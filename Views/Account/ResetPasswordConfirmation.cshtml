@{
    ViewData["Title"] = "Password Reset Successful - Ace Job Agency";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-2xl shadow-lg p-8 text-center">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Your password has been reset</h2>
            <p class="text-gray-600 mb-6">
                You can now sign in with your new password.
            </p>
            <a asp-action="Login" class="inline-block px-6 py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors">
                Go to Login
            </a>
        </div>
    </div>
</div>


