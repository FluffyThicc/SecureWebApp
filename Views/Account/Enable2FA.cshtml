@{
    ViewData["Title"] = "Enable Two-Factor Authentication - Ace Job Agency";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 via-orange-50 to-blue-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">Enable Two-Factor Authentication</h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Secure your account with Google Authenticator or any compatible authenticator app.
            </p>
        </div>

        <div class="bg-white p-8 rounded-2xl shadow-lg space-y-6">
            <div class="text-center">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Step 1: Scan the QR Code</h3>
                <p class="text-sm text-gray-600 mb-4">
                    Open your authenticator app (Google Authenticator, Microsoft Authenticator, Authy, etc.) and scan this QR code:
                </p>
                <div class="flex justify-center mb-4">
                    <img src="@ViewBag.QrCodeUrl" alt="QR Code for Two-Factor Authentication" class="border-2 border-gray-200 rounded-lg" />
                </div>
            </div>

            <div class="border-t border-gray-200 pt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Step 2: Manual Entry (Alternative)</h3>
                <p class="text-sm text-gray-600 mb-2">
                    If you cannot scan the QR code, enter this key manually in your authenticator app:
                </p>
                <div class="bg-gray-50 p-4 rounded-lg mb-4">
                    <code class="text-sm font-mono text-gray-900 break-all">@ViewBag.ManualEntryKey</code>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Step 3: Verify Setup</h3>
                <p class="text-sm text-gray-600 mb-4">
                    Enter the 6-digit code from your authenticator app to verify the setup:
                </p>
                
                <form asp-action="Enable2FA" method="post" class="space-y-4">
                    <div asp-validation-summary="All" class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm"></div>
                    
                    <div>
                        <label for="code" class="block text-sm font-medium text-gray-700 mb-2">Verification Code</label>
                        <input type="text" 
                               name="code" 
                               id="code"
                               maxlength="6"
                               pattern="[0-9]{6}"
                               class="w-full px-4 py-2 text-gray-900 bg-transparent border border-gray-300 rounded-lg focus:outline-none focus:border-gray-900 transition-colors text-center text-2xl tracking-widest"
                               placeholder="000000"
                               autocomplete="off"
                               required />
                        <p class="mt-2 text-xs text-gray-500">Enter the 6-digit code from your authenticator app</p>
                    </div>

                    <div class="flex gap-4">
                        <button type="submit" class="flex-1 py-3 px-6 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors shadow-lg">
                            Verify and Enable 2FA
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="flex-1 py-3 px-6 bg-gray-100 text-gray-900 font-semibold rounded-lg hover:bg-gray-200 transition-colors text-center">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>

            <div class="border-t border-gray-200 pt-4">
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <h4 class="text-sm font-semibold text-blue-900 mb-2">ðŸ“± Popular Authenticator Apps:</h4>
                    <ul class="text-sm text-blue-800 space-y-1">
                        <li>â€¢ Google Authenticator (iOS & Android)</li>
                        <li>â€¢ Microsoft Authenticator (iOS & Android)</li>
                        <li>â€¢ Authy (iOS & Android)</li>
                        <li>â€¢ 1Password (iOS & Android)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-format code input (6 digits only)
        document.getElementById('code').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
        });
    </script>
}

