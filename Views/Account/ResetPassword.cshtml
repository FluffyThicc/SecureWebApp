@model SecureWebApp.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password - Ace Job Agency";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 via-orange-50 to-blue-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">Reset your password</h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Enter a new strong password for your account.
            </p>
        </div>

        <form asp-action="ResetPassword" method="post" class="mt-8 space-y-6 bg-white p-8 rounded-2xl shadow-lg">
            @Html.HiddenFor(m => m.Token)
            @Html.HiddenFor(m => m.Email)

            <div asp-validation-summary="ModelOnly" class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm"></div>

            <div class="space-y-4">
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Password"
                           type="password"
                           class="w-full px-0 py-2 text-gray-900 bg-transparent border-0 border-b border-gray-300 focus:outline-none focus:border-gray-900 transition-colors" />
                    <span asp-validation-for="Password" class="block mt-1 text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="ConfirmPassword"
                           type="password"
                           class="w-full px-0 py-2 text-gray-900 bg-transparent border-0 border-b border-gray-300 focus:outline-none focus:border-gray-900 transition-colors" />
                    <span asp-validation-for="ConfirmPassword" class="block mt-1 text-xs text-red-600"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="w-full py-3 px-6 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors shadow-lg">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


