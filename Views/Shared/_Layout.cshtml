<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ace Job Agency</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['-apple-system', 'BlinkMacSystemFont', 'Segoe UI', 'Roboto', 'Helvetica Neue', 'Arial', 'sans-serif'],
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen bg-white">
    <header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold text-gray-900 hover:text-gray-700 transition-colors">
                    Ace Job Agency
                </a>
                
                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-8">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">Home</a>
                    <div class="relative group">
                        <button class="text-gray-700 hover:text-gray-900 font-medium transition-colors flex items-center">
                            Jobs
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div class="absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Browse Jobs</a>
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Job Categories</a>
                        </div>
                    </div>
                    <div class="relative group">
                        <button class="text-gray-700 hover:text-gray-900 font-medium transition-colors flex items-center">
                            Services
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <div class="absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Career Guidance</a>
                            <a href="#" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Resume Review</a>
                        </div>
                    </div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">Pricing</a>
                    <a href="#" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">FAQs</a>
                </div>

                <!-- Auth Buttons -->
                <div class="flex items-center space-x-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-sm text-gray-600 hidden sm:inline">Hello, @User.Identity.Name!</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                            <button type="submit" class="px-4 py-2 bg-gray-900 text-white rounded-full font-medium hover:bg-gray-800 transition-colors">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="px-4 py-2 text-gray-700 hover:text-gray-900 font-medium transition-colors hidden sm:inline">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="px-4 py-2 bg-gray-900 text-white rounded-full font-medium hover:bg-gray-800 transition-colors">
                            Register
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="min-h-[calc(100vh-200px)]">
        @RenderBody()
    </main>

    <footer class="border-t border-gray-200 bg-gray-50 mt-12 py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center text-gray-600">
                &copy; 2026 - Ace Job Agency - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-gray-900 hover:underline">Privacy</a>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
